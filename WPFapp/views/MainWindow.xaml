<Window x:Class="WPFapp.views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFapp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid x:Name="ViewFilesStackPanel" HorizontalAlignment="Left" Width="100">
            <ListBox d:ItemsSource="{d:SampleData ItemCount=5}" VerticalAlignment="Stretch"/>
            <Button Content="Clear" VerticalAlignment="Bottom" HorizontalAlignment="Stretch"/>
        </Grid>
    </Grid>
</Window>
